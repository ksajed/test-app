{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    // IMPORTANT : Définir le baseUrl à la racine du projet
    "baseUrl": ".",
    "paths": {
      // @/ pointe vers la racine du projet
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}

